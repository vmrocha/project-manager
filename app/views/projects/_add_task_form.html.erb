<%= form_with model: [project, Task.new] do |form| %>
  <div class="field is-grouped mb-4">
    <div class="control is-expanded">
      <%= form.text_field :title, class: "input", placeholder: "Add new task...", autofocus: true %>
    </div>

    <div class="control">
      <%= form.submit "Add Task", class: "button is-info" %>
    </div>
  </div>
<% end%>
