<%= form_with model: Project.new do |form| %>
  <div class="field is-grouped mb-4">
    <div class="control is-expanded">
      <%= form.text_field :name, placeholder: "Add new project...", class: "input", autofocus: true %>
    </div>

    <div class="control">
      <%= form.submit "Create", class: "button is-info" %>
    </div>
  </div>
<% end %>
