<h1 class="title">
  <%= project.name %>
</h1>

<%= progress_bar(project) %>

<div class="level">
  <div class="level-left">
    <div class="level-item">
      <span class="tag is-info"><%= project.tasks.completed.count %> / <%= project.tasks.count %> </span>
    </div>
  </div>

  <div class="level-right">
    <div class="level-item">
      <%= button_to "Destroy this project", project, class: "button is-danger", method: :delete %>
    </div>
  </div>
</div>
